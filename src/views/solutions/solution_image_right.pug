section.bg-white.pt-0.pb-0
    div.container
        div.row.justify-content-center.align-items-center
            div.col-lg-6.pt-0.pb-0
                img.pt-md-0(src=data.bg_image)
            div.col-lg-6.pt-0.pb-0
                h2.display-4!= data.headline
                p.lead!= data.descript
                div.justify-content-end.text-right
                if (data.id != '') && (data.button_caption != '')
                        a.btn.btn-lg.btn-success.text-white(href=`${data.id}.html`)!= data.button_caption
