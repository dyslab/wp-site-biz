section.p-0.bg-dark
    img.bg-image.position-md-absolute(src=data.bg_image)
    div.container-fluid.py-4.height-md-60
        div.row.justify-content-between.align-items-center.spacer-y-4
            div.col-md-7.col-lg-5.pl-md-4.pl-lg-5
                h1.display-4.text-white!= data.headline
                p.lead.mb-0.text-white!= data.descript
            div.col-lg-4.col-md-5.mt-3.mt-md-0
                div.list-group.mb-0.mx-xl-3
                    for litem in data.link_list
                        a.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href=litem.link)
                            div.d-flex.align-items-center
                                img.d-block.mr-3.icon(src=litem.icon)
                                span.mb-0.h6.mb-0!= litem.caption
                            i.fas.fa-angle-right.fa-lg
