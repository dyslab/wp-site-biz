section.bg-white.p-0(class=data.class)
    div.container
        nav
            div.nav.nav-tabs(id="nav-tab", role="tablist")
                each tabitem, index in data
                    if index == 0
                        a.nav-item.nav-link.active.border-bottom-0.rounded(id=`nav-tab-${index}`, data-toggle="tab", href=`#nav-tab-pane${index}`, role="tab", aria-controls=`#nav-tab-pane${index}`, aria-selected="true")!= tabitem.tabname
                    else
                        a.nav-item.nav-link.border-bottom-0.rounded(id=`nav-tab-${index}`, data-toggle="tab", href=`#nav-tab-pane${index}`, role="tab", aria-controls=`#nav-tab-pane${index}`, aria-selected="false")!= tabitem.tabname
        div.tab-content.bg-light.border.rounded(id="nav-tab-content")
            each tabitem, index in data
                if index == 0
                    div.tab-pane.fade.show.active(id=`nav-tab-pane${index}`, role="tabpanel", aria-labelledby=`nav-tab-${index}`)
                        div.p-3.p-lg-5!= tabitem.tabhtml
                else
                    div.tab-pane.fade(id=`nav-tab-pane${index}`, role="tabpanel", aria-labelledby=`nav-tab-${index}`)
                        div.p-3.p-lg-5!= tabitem.tabhtml

