section
    div.container
        ul.nav.nav-pills.p-0.mt-0.mb-3.justify-content-center.text-center(id="pills-tab", role="tablist")
            each tabitem, index in data
                if index == 0
                    li.nav-item
                        a.nav-link.active(id=`pills-tab-${index}`, data-toggle="pill", href=`#pills-tab-pane${index}`, role="tab", aria-controls=`pills-tab-pane${index}`, aria-selected="true")!= tabitem.tabname
                else
                    li.nav-item
                        a.nav-link(id=`pills-tab-${index}`, data-toggle="pill", href=`#pills-tab-pane${index}`, role="tab", aria-controls=`pills-tab-pane${index}`, aria-selected="false")!= tabitem.tabname
        div.tab-content(id="pills-tab-content")
            each tabitem, index in data
                if index == 0
                    div.tab-pane.fade.show.active(id=`pills-tab-pane${index}`, role="tabpanel", aria-labelledby=`pills-tab-${index}`)
                        div.p-3!= tabitem.tabhtml
                else
                    div.tab-pane.fade(id=`pills-tab-pane${index}`, role="tabpanel", aria-labelledby=`pills-tab-${index}`)
                        div.p-3!= tabitem.tabhtml
